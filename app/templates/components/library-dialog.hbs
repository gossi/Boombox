<b>{{if library.isNew 'New' 'Edit'}} Library</b>
{{#unless library.isNew}}
<a {{action 'delete'}} class="pull-right">{{fa-icon "trash-o"}}</a>
{{/unless}}

<div class="container" style="min-width: 375px;">
	<form {{action "save" on="submit"}}>
		<div class="form-group row">
			<label class="col-xs-2">Name</label>
			<div class="col-xs-10">
				{{input class="form-control form-control-sm" value=library.title}}
			</div>
		</div>

		<div class="form-group row">
			<label class="col-xs-2">Folders</label>
			<div class="col-xs-9">
				<select size="5" style="width: 100%" class="form-control form-control-sm" id="librarypaths">
						{{#each library.folders as |folder|}}
						<option value="{{folder.id}}">{{folder.path}}</option>
						{{/each}}
				</select>
			</div>
			<div class="col-xs-1">
				<input type="file" id="choosefolderbutton" style="display: none;" webkitdirectory/>
				<a {{action "add"}}>{{fa-icon "plus"}}</a>
				<a {{action "remove"}}>{{fa-icon "minus"}}</a>
			</div>
		</div>

		<div class="row">
			<button type="submit" class="btn btn-sm btn-primary">Save</button>
			<button class="btn btn-sm btn-secondary" {{action "cancel"}}>Cancel</button>
		</div>
	</form>
</div>
